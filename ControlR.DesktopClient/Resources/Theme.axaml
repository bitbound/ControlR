<ResourceDictionary xmlns="https://github.com/avaloniaui"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

	<ResourceDictionary.ThemeDictionaries>
		<!-- Dark Theme Colors -->
		<ResourceDictionary x:Key="Dark">
			<SolidColorBrush x:Key="PrimaryColor" Color="#2196F3"/>
			<SolidColorBrush x:Key="SecondaryColor" Color="#21f3e9"/>
			<SolidColorBrush x:Key="TertiaryColor" Color="#7b21f3"/>
			<SolidColorBrush x:Key="InfoColor" Color="#89b4f8"/>
			<SolidColorBrush x:Key="SuccessColor" Color="#2cb67d"/>
			<SolidColorBrush x:Key="WarningColor" Color="#facc15"/>
			<SolidColorBrush x:Key="ErrorColor" Color="#f87171"/>
			<SolidColorBrush x:Key="DarkColor" Color="#212121"/>

			<SolidColorBrush x:Key="TextPrimaryBrush" Color="#DEffffff"/>
			<SolidColorBrush x:Key="TextSecondaryBrush" Color="#99ffffff"/>
			<SolidColorBrush x:Key="TextDisabledBrush" Color="#61ffffff"/>

			<SolidColorBrush x:Key="BackgroundBrush" Color="#121212"/>
			<SolidColorBrush x:Key="BackgroundGrayBrush" Color="#1E1E1E"/>
			<SolidColorBrush x:Key="SurfaceBrush" Color="#1E1E1E"/>

			<SolidColorBrush x:Key="AppbarBackgroundBrush" Color="#1E1E1E"/>
			<SolidColorBrush x:Key="AppbarTextBrush" Color="#DEffffff"/>

			<SolidColorBrush x:Key="DividerBrush" Color="#1Fffffff"/>
			<SolidColorBrush x:Key="DividerLightBrush" Color="#0Fffffff"/>

			<SolidColorBrush x:Key="OverlayDarkBrush" Color="#80000000"/>
			<SolidColorBrush x:Key="OverlayLightBrush" Color="#40000000"/>

			<!-- Chat-specific colors -->
			<SolidColorBrush x:Key="ChatUserMessageBrush" Color="#1e3a5f"/>
			<SolidColorBrush x:Key="ChatViewerMessageBrush" Color="#2d2d2d"/>
			<SolidColorBrush x:Key="ChatInputBackgroundBrush" Color="#333333"/>
			<SolidColorBrush x:Key="ChatInputBorderBrush" Color="#555555"/>
		</ResourceDictionary>

		<!-- Light Theme Colors -->
		<ResourceDictionary x:Key="Light">
			<SolidColorBrush x:Key="PrimaryColor" Color="#2196F3"/>
			<SolidColorBrush x:Key="SecondaryColor" Color="#008c7a"/>
			<SolidColorBrush x:Key="TertiaryColor" Color="#7b21f3"/>
			<SolidColorBrush x:Key="InfoColor" Color="#0d6efd"/>
			<SolidColorBrush x:Key="SuccessColor" Color="#28a745"/>
			<SolidColorBrush x:Key="WarningColor" Color="#ffc107"/>
			<SolidColorBrush x:Key="ErrorColor" Color="#dc3545"/>
			<SolidColorBrush x:Key="DarkColor" Color="#424242"/>

			<SolidColorBrush x:Key="TextPrimaryBrush" Color="#DE000000"/>
			<SolidColorBrush x:Key="TextSecondaryBrush" Color="#99000000"/>
			<SolidColorBrush x:Key="TextDisabledBrush" Color="#61000000"/>

			<SolidColorBrush x:Key="BackgroundBrush" Color="#FAFAFA"/>
			<SolidColorBrush x:Key="BackgroundGrayBrush" Color="#F5F5F5"/>
			<SolidColorBrush x:Key="SurfaceBrush" Color="#FFFFFF"/>

			<SolidColorBrush x:Key="AppbarBackgroundBrush" Color="#F0F0F0"/>
			<SolidColorBrush x:Key="AppbarTextBrush" Color="#DE000000"/>

			<SolidColorBrush x:Key="DividerBrush" Color="#1F000000"/>
			<SolidColorBrush x:Key="DividerLightBrush" Color="#0F000000"/>

			<SolidColorBrush x:Key="OverlayDarkBrush" Color="#52000000"/>
			<SolidColorBrush x:Key="OverlayLightBrush" Color="#1F000000"/>

			<!-- Chat-specific colors -->
			<SolidColorBrush x:Key="ChatUserMessageBrush" Color="#bbdefb"/>
			<SolidColorBrush x:Key="ChatViewerMessageBrush" Color="#E0E0E0"/>
			<SolidColorBrush x:Key="ChatInputBackgroundBrush" Color="#F0F0F0"/>
			<SolidColorBrush x:Key="ChatInputBorderBrush" Color="#CCCCCC"/>
		</ResourceDictionary>
	</ResourceDictionary.ThemeDictionaries>
</ResourceDictionary>
