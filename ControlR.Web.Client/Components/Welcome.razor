@inject IControlrApi ServerSettingsApi

<div class="welcome-container">
  <div class="welcome-card">
    <div class="icon-wrapper">
      <img src="/appicon-512.png" alt="ControlR Icon" class="app-icon" />
      <div class="icon-glow"></div>
    </div>

    <MudText Typo="Typo.h2" Class="welcome-title">
      Welcome to ControlR
    </MudText>

    <MudText Typo="Typo.body1" Class="welcome-subtitle">
      Secure Remote Desktop & Device Management
    </MudText>

    <div class="action-buttons">
      <MudButton Color="Color.Primary"
                 Size="Size.Large"
                 Href="/Account/Login"
                 Variant="Variant.Filled"
                 Class="action-button">
        <MudIcon Icon="@Icons.Material.Filled.Login" Class="me-2" />
        Login
      </MudButton>

      @if (_isPublicRegistrationEnabled)
      {
        <MudButton Color="Color.Secondary"
                   Size="Size.Large"
                   Href="/Account/Register"
                   Variant="Variant.Outlined"
                   Class="action-button">
          <MudIcon Icon="@Icons.Material.Filled.PersonAdd" Class="me-2" />
          Register
        </MudButton>
      }
    </div>

    <MudDivider Class="my-6" />

    <div class="links-section">
      <MudText Typo="Typo.body2" Class="mb-3 links-title">
        Learn More & Support
      </MudText>

      <div class="external-links">
        <MudButton Href="https://github.com/bitbound/controlr"
                   Target="_blank"
                   Variant="Variant.Text"
                   StartIcon="@Icons.Custom.Brands.GitHub"
                   Color="Color.Default"
                   Class="external-link">
          View on GitHub
        </MudButton>

        <MudButton Href="https://github.com/sponsors/bitbound"
                   Target="_blank"
                   Variant="Variant.Text"
                   StartIcon="@Icons.Material.Filled.Favorite"
                   Color="Color.Error"
                   Class="external-link">
          Sponsor Project
        </MudButton>
      </div>
    </div>
  </div>
</div>

<style>
  .welcome-container {
    display: flex;
    align-items: center;
    justify-content: center;
    min-height: 70vh;
    padding: 2rem;
  }

  .welcome-card {
    max-width: 600px;
    width: 100%;
    padding: 3rem 2rem;
    text-align: center;
    background: var(--mud-palette-surface);
    border-radius: 16px;
    box-shadow: 0 8px 32px rgba(0, 0, 0, 0.1);
    position: relative;
    overflow: hidden;
  }

  .welcome-card::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 4px;
    background: linear-gradient(90deg, #2196F3, #00ffd5, #FA1791);
    animation: gradient-shift 3s ease infinite;
  }

  @keyframes gradient-shift {
    0%, 100% { opacity: 1; }
    50% { opacity: 0.7; }
  }

  .icon-wrapper {
    position: relative;
    display: inline-block;
    margin-bottom: 2rem;
  }

  .app-icon {
    width: 128px;
    height: 128px;
    position: relative;
    z-index: 1;
    animation: float 3s ease-in-out infinite;
  }

  @keyframes float {
    0%, 100% { transform: translateY(0px); }
    50% { transform: translateY(-10px); }
  }

  .icon-glow {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    width: 140px;
    height: 140px;
    background: radial-gradient(circle, rgba(33, 150, 243, 0.3), transparent 70%);
    border-radius: 50%;
    animation: pulse 2s ease-in-out infinite;
  }

  @keyframes pulse {
    0%, 100% { transform: translate(-50%, -50%) scale(1); opacity: 0.5; }
    50% { transform: translate(-50%, -50%) scale(1.1); opacity: 0.8; }
  }

  .welcome-title {
    font-weight: 700;
    margin-bottom: 0.5rem;
    background: linear-gradient(135deg, #2196F3, #00ffd5);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }

  .welcome-subtitle {
    color: var(--mud-palette-text-secondary);
    margin-bottom: 2rem;
  }

  .action-buttons {
    display: flex;
    gap: 1rem;
    justify-content: center;
    flex-wrap: wrap;
  }

  .action-button {
    min-width: 150px;
  }

  .links-section {
    margin-top: 1rem;
  }

  .links-title {
    color: var(--mud-palette-text-secondary);
    font-weight: 500;
  }

  .external-links {
    display: flex;
    gap: 1rem;
    justify-content: center;
    flex-wrap: wrap;
  }

  .external-link {
    transition: transform 0.2s ease;
  }

  .external-link:hover {
    transform: translateY(-2px);
  }

  @media (max-width: 600px) {
    .welcome-card {
      padding: 2rem 1.5rem;
    }

    .app-icon {
      width: 96px;
      height: 96px;
    }

    .icon-glow {
      width: 108px;
      height: 108px;
    }

    .action-buttons {
      flex-direction: column;
    }

    .action-button {
      width: 100%;
    }
  }
</style>

@code {
  private bool _isPublicRegistrationEnabled;

  protected override async Task OnInitializedAsync()
  {
    var settingsResults = await ServerSettingsApi.GetPublicRegistrationSettings();
    if (settingsResults.IsSuccess)
    {
      _isPublicRegistrationEnabled = settingsResults.Value.IsPublicRegistrationEnabled;
    }
  }
}