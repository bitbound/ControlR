    </Content>
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.Extensions.Hosting" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\..\ControlR.ApiClient\ControlR.ApiClient.csproj" />
  </ItemGroup>

</Project>
