{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Agent (Debug)",
      "type": "coreclr",
      "request": "launch",
      "program": "${workspaceFolder}/ControlR.Agent/bin/Debug/net9.0/ControlR.Agent.dll",
      "args": [],
      "cwd": "${workspaceFolder}/ControlR.Agent",
      "launchSettingsProfile": "Run",
      "stopAtEntry": false,
      "console": "internalConsole"
    },
    {
      "name": "DesktopClient (Debug)",
      "type": "coreclr",
      "request": "launch",
      "program": "${workspaceFolder}/ControlR.DesktopClient/bin/Debug/net9.0/ControlR.DesktopClient.dll",
      "args": [],
      "cwd": "${workspaceFolder}/ControlR.DesktopClient",
      "launchSettingsProfile": "Run",
      "stopAtEntry": false,
      "console": "internalConsole",
    },
    {
      "name": "Server (Debug)",
      "type": "coreclr",
      "request": "launch",
      "program": "${workspaceFolder}/ControlR.Web.Server/bin/Debug/net9.0/ControlR.Web.Server.dll",
      "args": [],
      "cwd": "${workspaceFolder}/ControlR.Web.Server",
      "launchSettingsProfile": "https",
      "stopAtEntry": false,
      "console": "internalConsole"
    },
    {
      "name": "Server (wasm debug)",
      "type": "blazorwasm",
      "request": "launch",
      "browser": "edge",
      "env": {
        "ASPNETCORE_ENVIRONMENT": "Development"
      },
      "hosted": true,
      "program": "${workspaceFolder}/ControlR.Web.Server/bin/Debug/net9.0/ControlR.Web.Server.dll",
      "cwd": "${workspaceFolder}/ControlR.Web.Server",
    },
    {
      "name": "LoadTester",
      "type": "coreclr",
      "request": "launch",
      "program": "${workspaceFolder}/Tests/ControlR.Agent.LoadTester/bin/Debug/net9.0/ControlR.Agent.LoadTester.dll",
      "args": [],
      "cwd": "${workspaceFolder}/Tests/ControlR.Agent.LoadTester",
      "stopAtEntry": false,
      "console": "internalConsole"
    },
    {
      "name": "Server (Hot Reload)",
      "type": "coreclr",
      "request": "launch",
      "program": "dotnet",
      "args": [
        "watch",
        "run",
        "--project",
        "${workspaceFolder}/ControlR.Web.Server/ControlR.Web.Server.csproj",
        "--launch-profile",
        "https"
      ],
      "cwd": "${workspaceFolder}/ControlR.Web.Server",
      "stopAtEntry": false,
      "serverReadyAction": {
        "action": "openExternally",
        "pattern": "\\bNow listening on:\\s+(https?:\\/\\/\\S+)"
      },
      "env": {
        "ASPNETCORE_ENVIRONMENT": "Development"
      },
      "console": "internalConsole"
    },
    {
      "name": "Agent (Hot Reload)",
      "type": "coreclr",
      "request": "launch",
      "program": "dotnet",
      "args": [
        "watch",
        "run",
        "--project",
        "${workspaceFolder}/ControlR.Agent/ControlR.Agent.csproj",
        "--launch-profile",
        "Run"
      ],
      "cwd": "${workspaceFolder}/ControlR.Agent",
      "stopAtEntry": false,
      "console": "internalConsole"
    },
    {
      "name": "DesktopClient (Hot Reload)",
      "type": "coreclr",
      "request": "launch",
      "program": "dotnet",
      "args": [
        "watch",
        "run",
        "--project",
        "${workspaceFolder}/ControlR.DesktopClient/ControlR.DesktopClient.csproj",
        "--launch-profile",
        "Run"
      ],
      "cwd": "${workspaceFolder}/ControlR.DesktopClient",
      "stopAtEntry": false,
      "console": "internalConsole"
    }
  ],
  "compounds": [
    {
      "name": "Full Stack (Debug)",
      "preLaunchTask": "build + compose",
      "configurations": [
        "Server (Debug)",
        "Agent (Debug)",
        "DesktopClient (Debug)"
      ],
      "stopAll": true,
      "presentation": {
        "hidden": false,
        "group": "Compounds",
        "order": 0
      }
    },
    {
      "name": "Full Stack (Hot Reload)",
      "preLaunchTask": "build + compose",
      "configurations": [
        "Server (Hot Reload)",
        "Agent (Hot Reload)",
        "DesktopClient (Hot Reload)"
      ],
      "stopAll": true,
      "presentation": {
        "hidden": false,
        "group": "Compounds",
        "order": 1
      }
    },
      {
      "name": "Full Stack (wasm debug)",
      "preLaunchTask": "build + compose",
      "configurations": [
        "Server (wasm debug)",
        "Agent (Debug)",
        "DesktopClient (Debug)"
      ],
      "stopAll": true,
      "presentation": {
