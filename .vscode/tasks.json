{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "dotnet: build",
      "type": "dotnet",
      "task": "build",
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": []
    },
    {
      "label": "build agent",
      "type": "dotnet",
      "task": "build",
      "group": "build",
      "problemMatcher": [],
      "dependsOn": ["dotnet: build"],
      "file": "ControlR.Agent/ControlR.Agent.csproj"
    },
    {
      "label": "build server",
      "type": "dotnet",
      "task": "build",
      "group": "build",
      "problemMatcher": [],
      "file": "ControlR.Web.Server/ControlR.Web.Server.csproj"
    },
    {
      "label": "compose",
      "type": "docker-compose",
      "dockerCompose": {
        "projectName": "controlr",
        "up": {
          "detached": true,
          "build": true,
          "services": ["postgres", "aspire"]
        },
        "files": [
          "${workspaceFolder}/docker-compose/docker-compose.yml",
          "${workspaceFolder}/docker-compose/docker-compose.override.yml"
        ]
      },
      "group": "build",
      "problemMatcher": []
    }
  ]
}
